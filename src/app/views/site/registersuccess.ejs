<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include("layout/head", {title: "Trang Chủ"})%>
    </head>

    <body>
        <!-- Top bar Start -->
        <%-include("layout/menu")%>
        <!-- Bottom Bar End --> 
        
        <!-- Breadcrumb Start -->
        <div class="breadcrumb-wrap">
            <div class="container-fluid">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Đăng ký thành công</li>
                </ul>
            </div>
        </div>
        <!-- Breadcrumb End -->
        
        <!-- Login Start -->
        <div class="login">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 mx-auto">   
                    <form action="/login" role="form" method="get" ></form> 
                        <div class="register-form">
                            <div class="row">
                                
                                
                                <div class="col-md-12 text-center">
                                    <img src="/static/site/img/sussces.jpg" alt="sussces" width="90" height="100" >
                                </div>
                                
                                
                                <div class="col-md-12">
                                    <label>Bạn đã đăng ký thành công! Vui lòng đăng nhập để thực hiện các chức năng mua hàng nhanh chóng hơn</label>
                                </div>
                                <hr>
                                <div id="btn-register" class="col-md-12 text-center">
                                    <button class="btn">Đăng nhập ngay!</button>
                                </div>

                                
                                
                               
                               
                                
                               
                            </div>
                        </div>
                    </form>
                    </div>
                   
                </div>
            </div>
        </div>
        <!-- Login End -->
        
        <style>
            #btn-register{
                margin-bottom: 15px;
            }
        </style>
        <!-- Footer Start -->
        <%-include("layout/footer")%>
        <script>
            $('#btn-register').click(function() {
            window.location.href = '/login';
            return false;
            });
        </script>
    </body>
</html>
