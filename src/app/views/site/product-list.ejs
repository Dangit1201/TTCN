                                                        <div class="dropdown-toggle" data-toggle="dropdown">15tr đến 22tr</div>
                                                    <% }%>
                                                    <% if(sort=='gte22'){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">trên 22 tr</div>
                                                    <% }%>
                                                   
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a href="/category-<%=category.title%>.<%=category.id%>" class="dropdown-item">Mọi giá</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?sort=14" class="dropdown-item">1tr đến 4tr</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?sort=48" class="dropdown-item">4tr đến 8tr</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?sort=815" class="dropdown-item">8tr đến 15tr</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?sort=1522" class="dropdown-item">15tr đến 22tr</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?sort=gte22" class="dropdown-item">trên 22 tr</a>
                                                      
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="product-short">
                                                <div class="dropdown">
                                                    <% if(ram==null){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">Tìm theo ram</div>
                                                    <% }%>
                                                    <% if(ram==1){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">1 GB</div>
                                                    <% }%>
                                                    <% if(ram==2){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">2 GB</div>
                                                    <% }%>
                                                    <% if(ram==3){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">3 GB</div>
                                                    <% }%>
                                                    <% if(ram==4){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">4 GB</div>
                                                    <% }%>
                                                    <% if(ram==6){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">6 GB</div>
                                                    <% }%>
                                                    <% if(ram==8){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">8 GB</div>
                                                    <% }%>
                                                    <% if(ram==12){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">12 GB</div>
                                                    <% }%>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a href="/category-<%=category.title%>.<%=category.id%>" class="dropdown-item">Tất cả</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?ram=1" class="dropdown-item">1 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?ram=2" class="dropdown-item">2 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?ram=3" class="dropdown-item">3 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?ram=4" class="dropdown-item">4 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?ram=6" class="dropdown-item">6 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?ram=8" class="dropdown-item">8 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?ram=12" class="dropdown-item">12 GB</a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="product-short">
                                                <div class="dropdown">
                                                    <% if(memory==null){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">Tìm theo bộ nhớ</div>
                                                    <% }%>
                                                    <% if(memory==16){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">16 GB</div>
                                                    <% }%>
                                                    <% if(memory==32){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">32 GB</div>
                                                    <% }%>
                                                    <% if(memory==64){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">64 GB</div>
                                                    <% }%>
                                                    <% if(memory==128){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">128 GB</div>
                                                    <% }%>
                                                    <% if(memory==256){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">256 GB</div>
                                                    <% }%>
                                                    <% if(memory==512){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">512 GB</div>
                                                    <% }%>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a href="/category-<%=category.title%>.<%=category.id%>" class="dropdown-item">Tất cả</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?memory=16" class="dropdown-item">16 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?memory=32" class="dropdown-item">32 Gb</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?memory=64" class="dropdown-item">64 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?memory=128" class="dropdown-item">128 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?memory=256" class="dropdown-item">256 GB</a>
                                                        <a href="/category-<%=category.title%>.<%=category.id%>?memory=512" class="dropdown-item">512 GB</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div id="myTable" class="row">
                                    <% for(let product of products){%>
                                        <div id="div-phone" class="col-md-4">
                                            <div  class="product-item">
                                                <div class="product-title">
                                                    <a href="/product-<%=product.slug%>.<%=product._id%>"><%=product.name%></a>
                                                    <div class="ratting">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                </div>
                                                <div class="product-image">
                                                    <a href="/product-<%=product.slug%>.<%=product._id%>">
                                                        <img src="/static/images/<%=product.thumbnail%>" alt="Product Image">
                                                    </a>
                                                    <div class="product-action">
                                                       
                                                       
                                                       <!--  <a href="/product-<%=product.slug%>.<%=product._id%>"><i class="fa fa-search"></i></a> -->
                                                    </div>
                                                </div>
                                                <div class="product-price">
                                                    <h3><span><%=product.price.toLocaleString('vi-VN')%>đ</span></h3>
                                                    <a class="btn" href="/product-<%=product.slug%>.<%=product._id%>"><i class="fa fa-shopping-cart"></i>Mua ngay</a>
                                                </div>
                                            </div>
                                        </div>
                                    <% }%>  
                                </div>
                            </div>
                            
                            
                        </div>
                        
                        <!-- Pagination Start -->
                        <div class="col-md-12">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    

                                        <%if(memory){%>
                                            <%if(page>1){%>
                                                <li class="page-item"><a class="page-link"
                                                        href="/category-<%=category.slug%>.<%=category._id%>?memory=<%=memory%>&page=<%= page-1%>">&laquo;</a>
                                                </li>
                                                <%}%>
                                                    <%for(x in pages){%>
                                                        <%if(pages[x]!=='...'){%>
                                                            <li class="page-item <%=pages[x]===page ? 'active':''%>"><a
                                                                    class="page-link"
                                                                    href="/category-<%=category.slug%>.<%=category._id%>?memory=<%=memory%>&page=<%= pages[x]%>">
                                                                    <%=pages[x]%>
                                                                </a></li>
                                                            <%} else {%>
                                                                <li class="page-item"><a class="page-link"
                                                                        onclick="return false"
                                                                        href="/category-<%=category.slug%>.<%=category._id%>?memory=<%=memory%>&page=<%= pages[x]%>">
                                                                        <%=pages[x]%>
                                                                    </a></li>
                                                                <%}%>
                                                                    <%}%>
                                                                        <%if(page<totalPage){%>
                                                                            <li class="page-item"><a class="page-link"
                                                                                    href="/category-<%=category.slug%>.<%=category._id%>?memory=<%=memory%>&page=<%= page+1%>">&raquo;</a>
                                                                            </li>
                                                                            <%}%>  
                                        <%} else if(ram){%>
                                            <%if(page>1){%>
                                                <li class="page-item"><a class="page-link"
                                                        href="/category-<%=category.slug%>.<%=category._id%>?ram=<%=ram%>&page=<%= page-1%>">&laquo;</a>
                                                </li>
                                                <%}%>
                                                    <%for(x in pages){%>
                                                        <%if(pages[x]!=='...'){%>
                                                            <li class="page-item <%=pages[x]===page ? 'active':''%>"><a
                                                                    class="page-link"
                                                                    href="/category-<%=category.slug%>.<%=category._id%>?ram=<%=ram%>&page=<%= pages[x]%>">
                                                                    <%=pages[x]%>
                                                                </a></li>
                                                            <%} else {%>
                                                                <li class="page-item"><a class="page-link"
                                                                        onclick="return false"
                                                                        href="/category-<%=category.slug%>.<%=category._id%>?ram=<%=ram%>&page=<%= pages[x]%>">
                                                                        <%=pages[x]%>
                                                                    </a></li>
                                                                <%}%>
                                                                    <%}%>
                                                                        <%if(page<totalPage){%>
                                                                            <li class="page-item"><a class="page-link"
                                                                                    href="/category-<%=category.slug%>.<%=category._id%>?ram=<%=ram%>&page=<%= page+1%>">&raquo;</a>
                                                                            </li>
                                                                            <%}%>  
                                        <%} else {%>
                                            <%if(page>1){%>
                                                <li class="page-item"><a class="page-link"
                                                        href="/category-<%=category.slug%>.<%=category._id%>?sort=<%=sort%>&page=<%= page-1%>">&laquo;</a>
                                                </li>
                                                <%}%>
                                                    <%for(x in pages){%>
                                                        <%if(pages[x]!=='...'){%>
                                                            <li class="page-item <%=pages[x]===page ? 'active':''%>"><a
                                                                    class="page-link"
                                                                    href="/category-<%=category.slug%>.<%=category._id%>?sort=<%=sort%>&page=<%= pages[x]%>">
                                                                    <%=pages[x]%>
                                                                </a></li>
                                                            <%} else {%>
                                                                <li class="page-item"><a class="page-link"
                                                                        onclick="return false"
                                                                        href="/category-<%=category.slug%>.<%=category._id%>?sort=<%=sort%>&page=<%= pages[x]%>">
                                                                        <%=pages[x]%>
                                                                    </a></li>
                                                                <%}%>
                                                                    <%}%>
                                                                        <%if(page<totalPage){%>
                                                                            <li class="page-item"><a class="page-link"
                                                                                    href="/category-<%=category.slug%>.<%=category._id%>?sort=<%=sort%>&page=<%= page+1%>">&raquo;</a>
                                                                            </li>
                                                                            <%}%>
                                        <%}%>
                                       
                                </ul>
                            </nav>
                        </div>

