        <!-- Product List Start -->
        <div class="product-view">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="product-view-top">
                                    <div class="row">
                                       
                                       
                                        <div class="col-md-4">
                                            <div class="product-price-range">
                                                <div class="dropdown">
