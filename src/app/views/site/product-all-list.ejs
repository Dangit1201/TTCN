<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include("layout/head", {title: "Tất cả sản phẩm"})%>
    </head>

    <body>
        <!-- Top bar Start -->
        <%-include("layout/menu")%>
        <!-- Bottom Bar End -->  
        
        <!-- Breadcrumb Start -->
        <div class="breadcrumb-wrap">
            <div class="container-fluid">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a >Tất cả sản phẩm</a></li>
                </ul>
            </div>
        </div>
        <!-- Breadcrumb End -->
        
        <!-- Product List Start -->
        <div class="product-view">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="product-view-top">
                                    <div class="row">
                                        
                                        
                                        <div class="col-md-4">
                                            <div class="product-price-range">
                                                <div class="dropdown">
                                                    <% if(sort==null){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">Tìm theo giá điện thoại</div>
                                                    <% }%>
                                                    <% if(sort=='14'){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">1tr đến 4tr</div>
                                                    <% }%>
                                                    <% if(sort=='48'){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">4tr đến 8tr</div>
                                                    <% }%>
                                                    <% if(sort=='815'){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">8tr đến 15tr</div>
                                                    <% }%>
                                                    <% if(sort=='gte15'){%>
                                                        <div class="dropdown-toggle" data-toggle="dropdown">trên 15 tr</div>
                                                    <% }%>
                                                   
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a href="/category" class="dropdown-item">Mọi giá</a>
                                                        <a href="/category?sort=14" class="dropdown-item">1tr đến 4tr</a>
                                                        <a href="/category?sort=48" class="dropdown-item">4tr đến 8tr</a>
                                                        <a href="/category?sort=815" class="dropdown-item">8tr đến 15tr</a>
                                                        <a href="/category?sort=gte15" class="dropdown-item">trên 15 tr</a>
                                                      
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div id="tabletoreplace"class="col-md-12">
                                <div id="myTable" class="row">
                                    <% for(let product of products){%>
                                        <div class="col-md-4">
                                            <div class="product-item">
                                                <div class="product-title">
                                                    <a href="/product-<%=product.slug%>.<%=product._id%>"><%=product.name%></a>
                                                    <div class="ratting">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                </div>
                                                <div class="product-image">
                                                    <a href="/product-<%=product.slug%>.<%=product._id%>">
                                                        <img src="/static/images/<%=product.thumbnail%>" alt="Product Image">
                                                    </a>
                                                    <div class="product-action">
                                                      
                                                       
                                                        <!-- <a href="/product-<%=product.slug%>.<%=product._id%>"><i class="fa fa-search"></i></a> -->
                                                    </div>
                                                </div>
                                                <div class="product-price">
                                                    <h3><span><%=product.price.toLocaleString('vi-VN')%>đ</span></h3>
                                                    <a class="btn" href="/product-<%=product.slug%>.<%=product._id%>"><i class="fa fa-shopping-cart"></i>Buy Now</a>
                                                </div>
                                            </div>
                                        </div>
                                    <% }%>  
                                </div>
                            </div>
                            
                            
                        </div>
                        
                        <!-- Pagination Start -->
                        <div id="pagisort" class="col-md-12">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                        
                                        <%if(page>1){%>
                                            <li class="page-item"><a class="page-link"
                                                    href="/category?sort=<%=sort%>&page=<%= page-1%>">&laquo;</a>
                                            </li>
                                            <%}%>
                                                <%for(x in pages){%>
                                                    <%if(pages[x]!=='...'){%>
                                                        <li class="page-item <%=pages[x]===page ? 'active':''%>"><a
                                                                class="page-link"
                                                                href="/category?sort=<%=sort%>&page=<%= pages[x]%>">
                                                                <%=pages[x]%>
                                                            </a></li>
                                                        <%} else {%>
                                                            <li class="page-item"><a class="page-link"
                                                                    onclick="return false"
                                                                    href="/category?sort=<%=sort%>&page=<%= pages[x]%>">
                                                                    <%=pages[x]%>
                                                                </a></li>
                                                            <%}%>
                                                                <%}%>
                                                                    <%if(page<totalPage){%>
                                                                        <li class="page-item"><a class="page-link"
                                                                                href="/category?sort=<%=sort%>&page=<%= page+1%>">&raquo;</a>
                                                                        </li>
                                                                        <%}%>
                                       
                                </ul>
                            </nav>
                        </div>

                      
                        <!-- Pagination Start -->
                    </div>           
                    
                    <!-- Side Bar Start -->
                    <%-include("layout/sidebar")%>
                    <!-- Side Bar End -->
                </div>
            </div>
        </div>
        <!-- Product List End -->  
        
        <!-- Brand Start -->
        <div class="brand">
            <div class="container-fluid">
                <div class="brand-slider">
                    <% for(let x of advertisementsshare){%>
                    <div class="brand-item"><img src="/static/images/<%=x.thumbnail%>" alt=""></div>
                    <% }%>
                </div>
            </div>
           
        </div>
        <!-- Brand End -->
        
        <!-- Footer Start -->
        <%-include("layout/footer")%>
        <script> 
            document.addEventListener('DOMContentLoaded',function(){
               $(document).on("keyup","#myInput",function(){
                    var data = $(this).val();
                    console.log("du lieu tai client khi nhap:"+data);
                    $.ajax({
                        async:false,
                        type:"POST",
                        url:"/searchallcat",
                        contentType:"application/x-www-form-urlencoded",
                        dataType:"html",
                        data:{data:data},
                        success:function(response){
                            $("#myTable").replaceWith(response);
                        },
                        error:function(xhr,ajaxOptions, thrownError){
                            alert("xay ra loi");
                        }
                    });
               });
        
               
            })
        </script>


        
    </body>
</html>
