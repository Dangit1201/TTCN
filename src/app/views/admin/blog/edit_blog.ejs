<!DOCTYPE html>
<html>
<head>
	<%- include('../layout/head.ejs', {title: "Sửa quảng cáo" })%>

</head>

<body>
	<%- include('../layout/header.ejs') %>
	<!-- /.container-fluid -->
		
	<%- include('../layout/sidebar.ejs') %>
	<!--/.sidebar-->
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
                <li><a href="/admin"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                <li><a href="">Quản lý quảng cáo</a></li>
				<li class="active">Sửa quảng cáo</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Sửa quảng cáo</h1>
			</div>
        </div><!--/.row-->
        <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="col-md-8">
                                <form action="/admin/blogs/update/<%=blog._id%>" role="form" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Tiêu đề bài viết</label>
                                        <input name="title" value="<%=blog.title%>" type="text" class="form-control" placeholder="tiêu đề">
                                    </div>
                                    <div class="form-group">
                                        <label>Ảnh bài viết</label>
                                        <input  name="thumbnail" type="file">
                                        <br>
                                        <div>
                                            <img width="150" height="80" src="/static/images/<%=blog.thumbnail%>">
                                    </div>
                                    <div class="form-group">
                                        <label>Nội dung bài viết</label>
                                        <textarea required name="content"  class="form-control" rows="3"><%=blog.content%></textarea>
                                        <script>
                                            CKEDITOR.replace("content");
                                        </script>
                                    </div>
                                    
                                    <button name="sbm" type="submit" class="btn btn-success">Sửa</button>
                                    <button id="btn-exit" type="reset" class="btn btn-default">Thoát</button>
                                </div>
                        </form>
                        </div>
                    </div>
                </div><!-- /.col-->
            </div><!-- /.row -->
			<%- include('../layout/footer.ejs')%>
            <script>
                $('#btn-exit').click(function() {
                window.location.href = '/admin/advertisements';
                return false;
                });
            </script>
		
	</div>	<!--/.main-->	
</body>

</html>
